<?xml version="1.0" encoding="utf-8"?>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/GridLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="3"
        android:orientation="vertical"
        tools:context="com.example.siddhiparekh11.labassignment.MainActivity" >

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
           android:background="@drawable/ic_assignment_black_24dp"
            android:onClick="btnAbout"
android:layout_columnWeight="1"
            android:layout_rowWeight="1"
             />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_group_black_24dp"
            android:onClick="btnInteract"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
             />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_place_black_24dp"
            android:onClick="btnMaps"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="btnPhotoShare"
            android:background="@drawable/ic_share_black_24dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
             />
        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="btnPhotoVideo"
            android:background="@drawable/ic_camera_enhance_black_24dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
             />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:onClick="btnComment"
           android:background="@drawable/ic_forum_black_24dp"
            android:layout_columnWeight="1"
           />

    </GridLayout>



